page {
    background-color: #f2f2f2;
    padding: 40rpx;
}

.title {
    height: 100rpx;
    color: #808080;
    line-height: 100rpx;
    font-size: 32rpx;
    margin-top: 20rpx;
}

.scroll-view {
    width: 500rpx;
    height: 300rpx;
}

.flex-row {
    width: 1200rpx;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.flex-row view {
    width: 400rpx;
    height: 300rpx;
    text-align: center;
    line-height: 300rpx;
}

.flex-column {
    width: 500rpx;
    height: 600rpx;
}

.flex-column view {
    width: 500rpx;
    height: 200rpx;
    text-align: center;
    line-height: 200rpx;
}

.a {
    background-color: chocolate;
}

.b {
    background-color: bisque;
}

.c {
    background-color: cadetblue;
}